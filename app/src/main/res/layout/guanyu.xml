<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="260dp"
    android:orientation="vertical"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关于："
        android:textSize="25dp"/>

    <TextView
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="本项目在github上，项目地址："
        />
    <TextView
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="https://github.com/xiaosiqi111/IPjiSuan"
        />
    <TextView
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="有任何意见或建议请发送到作者邮箱,或者在评论区发表意见"
        />
    <TextView
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="http://www.coolapk.com/u/528614"
        />
    <TextView
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:autoLink="email"
        android:text="作者邮箱："
        />
    <TextView
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:autoLink="email"
        android:text="xiaosiqi111@qq.com"
        />
    <LinearLayout
        android:layout_width="256dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="版本号："
            />
        <TextView
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="@string/banbeng"
        />

    </LinearLayout>
    <TextView
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:text="更新内容："
        />
        <TextView
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="加入了查询本机的公网IP和查询IP归属地的功能，使用的是淘宝IP地址库"
            />
</LinearLayout>